<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <shape>
            <corners android:radius="5dip" />
            <padding
                android:bottom="1dip"
                android:left="1dip"
                android:right="1dip"
                android:top="1dip" />

            <solid android:color="#cfcccc" />

            <stroke
                android:width="1dp"
                android:color="#cfcccc" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dip" />

                <stroke
                    android:width="1dp"
                    android:color="#cfcccc" />

                <gradient
                    android:angle="45"
                    android:centerColor="#12ecae"
                    android:centerY="0.75"
                    android:endColor="#0bf113"
                    android:startColor="#2260cc" />
            </shape>
        </clip>
    </item>

</layer-list>