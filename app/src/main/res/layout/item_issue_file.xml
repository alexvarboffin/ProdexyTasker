<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:background="@drawable/window_background">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/avatar" />

            <LinearLayout
                android:padding="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="id" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="name" />

                <TextView
                    android:id="@+id/tv_isSystemFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="isSystemFile" />

                <TextView
                    android:id="@+id/tv_systemFileInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="systemFileInfo" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="version" />

                <TextView
                    android:id="@+id/tv_versioningAllowed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="versioningAllowed" />

                <TextView
                    android:id="@+id/tv_providerId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="providerId" />

                <TextView
                    android:id="@+id/tv_authorUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="authorUserName" />

                <TextView
                    android:id="@+id/tv_authorUserId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="authorUserId" />

                <TextView
                    android:id="@+id/tv_creationDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="creationDate" />

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="size" />

                <TextView
                    android:id="@+id/tv_isViewable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="isViewable" />

                <TextView
                    android:id="@+id/tv_imageHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="imageHeight" />

                <TextView
                    android:id="@+id/tv_imageWidth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="imageWidth" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>