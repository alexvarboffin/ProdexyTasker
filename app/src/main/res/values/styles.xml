<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="PrimaryButtonOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="SimpleText" parent="@android:style/TextAppearance">
        <!--<item name="android:textColor">@android:color/black</item>-->
        <!--<item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>-->
        <!--<item name="android:paddingRight">30dp</item>-->
    </style>

    <style name="DialogHeaderTitleStyle">
        <item name="android:layout_margin">@dimen/large_spacing</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dialog_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>


    <!--@drawable/window_background-->

    <style name="AppTheme.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>



    <style name="BlueColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button.Colored</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="BlueColoredButton.Confirm">
        <item name="android:paddingLeft">72dp</item>
        <item name="android:paddingRight">72dp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="Column" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ColumnS4" parent="Column">
        <item name="android:layout_weight">.4</item>
        <item name="android:layout_margin">@dimen/column_margin</item>
    </style>

    <style name="ColumnS6" parent="Column">
        <item name="android:layout_weight">.6</item>
        <!--<item name="android:layout_margin">@dimen/column_margin</item>-->
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="ColumnS8" parent="Column">
        <item name="android:layout_weight">.8</item>
        <item name="android:layout_margin">@dimen/column_margin</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="ColumnS2" parent="Column">
        <item name="android:layout_weight">.2</item>
        <!--<item name="android:layout_margin">@dimen/column_margin</item>-->
    </style>

    <style name="toolbarTitleText"></style>


    <style name="LabelText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="ColumnS4.LabelText">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="ColumnS6.SimpleText">

    </style>

    <style name="DrawableLeftCenterButton">

    </style>

    <dimen name="column_margin">0dp</dimen>
</resources>
